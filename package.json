{
  "name": "react-topology",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "repository": "github:yldio/react-topology",
  "main": "dist/react-topology.umd.js",
  "jsnext:main": "dist/react-topology.es.js",
  "module": "dist/react-topology.es.js",
  "entry": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "styleguidist server",
    "fmt": "prettier --write --single-quote src/*.js",
    "lint:js": "eslint . --fix",
    "lint:css": "stylelint './src/**/*.js'",
    "test": "run-s compile int:js lint:css jest",
    "jest": "jest --env=jsdom",
    "build": "styleguidist build",
    "compile": "NODE_ENV=development babel src --out-dir lib --source-maps inline",
    "prepublish": "NODE_ENV=production bup",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "d3": "^4.11.0",
    "joyent-ui-toolkit": "^2.0.1",
    "lodash.difference": "^4.5.0",
    "lodash.differenceby": "^4.8.0",
    "normalized-styled-components": "^1.0.17",
    "polished": "^1.8.1",
    "prop-types": "^15.6.0",
    "remcalc": "^1.0.9",
    "styled-components": "^2.2.1",
    "styled-is": "^1.1.0"
  },
  "devDependencies": {
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-preset-joyent-portal": "^3.3.3",
    "bup": "^2.0.6",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.1.4",
    "eslint": "^4.9.0",
    "eslint-config-joyent-portal": "^3.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-config-xo-space": "^0.17.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "joyent-react-scripts": "^2.5.0",
    "lint-staged": "^4.3.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-docgen": "^2.19.0",
    "react-docgen-displayname-handler": "^1.0.1",
    "react-styleguidist": "^6.0.31",
    "stylelint": "^8.2.0",
    "stylelint-config-joyent-portal": "^2.0.1",
    "webpack": "^3.8.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "jest --bail --findRelatedTests",
      "eslint --fix",
      "stylelint",
      "git add -A"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss|postcss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/"
    ],
    "collectCoverage": true,
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
